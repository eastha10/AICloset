<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <SearchView
        android:id="@+id/Search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        app:layout_constraintstart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AiButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="364dp"
        android:text="Ai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintstart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/teal_200"/>



    <HorizontalScrollView
        android:id="@+id/Scroll1"
        android:layout_margin="20dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/AiButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/img1"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="3dp"
                android:text="image_1"
                android:background="#86D0D0D0"
                />
            <Button
                android:id="@+id/img2"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="3dp"
                android:text="image_2"
                android:background="#86D0D0D0"/>
            <Button
                android:id="@+id/img3"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="3dp"
                android:text="image_3"
                android:background="#86D0D0D0"/>
            <Button
                android:id="@+id/img4"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="3dp"
                android:text="image_4"
                android:background="#86D0D0D0"/>
            <Button
                android:id="@+id/img5"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="3dp"
                android:text="image_5"
                android:background="#86D0D0D0"/>
            <Button
                android:id="@+id/img6"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="3dp"
                android:text="image_6"
                android:background="#86D0D0D0"/>
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/Scroll2"
        android:layout_margin="20dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/Scroll1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/img1_1"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="3dp"
                android:text="image_1"
                android:background="#86D0D0D0"
                />
            <Button
                android:id="@+id/img2_1"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="3dp"
                android:text="image_2"
                android:background="#86D0D0D0"/>
            <Button
                android:id="@+id/img3_1"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="3dp"
                android:text="image_3"
                android:background="#86D0D0D0"/>
            <Button
                android:id="@+id/img4_1"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="3dp"
                android:text="image_4"
                android:background="#86D0D0D0"/>
            <Button
                android:id="@+id/img5_1"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="3dp"
                android:text="image_5"
                android:background="#86D0D0D0"/>
            <Button
                android:id="@+id/img6_1"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="3dp"
                android:text="image_6"
                android:background="#86D0D0D0"/>
        </LinearLayout>
    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
